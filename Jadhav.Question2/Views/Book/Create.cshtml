@using Jadhav.Question2.Models
@model Books

@{
    ViewBag.Title = "Create";
}

<h2>Add New Book</h2>
<hr />

<div class="container">
    <div class="row">
        <div class="col-6">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                <div class="mb-2">
                    @Html.LabelFor(p => p.BookName)
                    @Html.TextBoxFor(p => p.BookName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(p => p.BookName)
                </div>
                <div class="mb-2">
                    @Html.LabelFor(p => p.ISBN)
                    @Html.TextBoxFor(p => p.ISBN, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.ISBN)
                </div>
                <div class="mb-2">
                    @Html.LabelFor(p => p.Genre)
                    @Html.TextBoxFor(p => p.Genre, new { @class = "form-control" })
                    @Html.ValidationMessageFor(p => p.Genre)
                </div>
                <div class="mb-2">
                    @Html.LabelFor(p => p.AuthorName)
                    @Html.TextBoxFor(p => p.AuthorName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(p => p.AuthorName)
                </div>

                 <div class="mb-2">
                    <button type="submit">Save</button>
                    <button type="reset">Reset</button>
                </div>
            }
        </div>
    </div>
</div>


